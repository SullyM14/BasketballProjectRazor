@page
@model BasketballProjectRazor.Pages.NBAPlayers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<style>
    * {
        background-size: cover;
        text-align: center;
        color: white
    }

    a {
        color: white;
    }
</style>
<h1>Players</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Player Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Players[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Players[0].Ppg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Players[0].Apg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Players[0].Rpg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Players[0].GamesPlayed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Players[0].Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Players[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Players)
        {
            <tr>
                <td>
                    @item.ToString()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ppg)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apg)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rpg)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GamesPlayed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
                <td>
                    £@Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a class="btn btn-success" asp-page="./PlayerDetails" asp-route-id="@item.PlayerId">View Player Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
