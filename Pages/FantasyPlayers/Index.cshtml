@page
@model BasketballProjectRazor.Pages.FantasyPlayers.IndexModel

@{
    ViewData["Title"] = "Index";
}
<style>
    * {
        background-size: cover;
        text-align: center;
        color: white
    }

    a {
        color: white;
    }

    #budgetLabel {
        font-size: larger
    }
</style>
<h1>@ViewBag.TeamName</h1>

<p style="display:inline">
    <a class="btn btn-success" style="float:right" asp-page="Create" asp-route-id="@ViewBag.UserTeamID">Add New Player</a>
    <div id="budgetLabel" class="form-group" style="float:left">
        Budget: @ViewBag.Budget
    </div>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Player Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserTeamPlayers[0].Player.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserTeamPlayers[0].Player.Ppg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserTeamPlayers[0].Player.Apg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserTeamPlayers[0].Player.Rpg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserTeamPlayers[0].Player.GamesPlayed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserTeamPlayers[0].Player.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserTeamPlayers[0].Player.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.UserTeamPlayers)
        {
            <tr>
                <td>
                    @item.Player.ToString()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Player.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Player.Ppg)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Player.Apg)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Player.Rpg)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Player.GamesPlayed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Player.Position)
                </td>
                <td>
                    £@Html.DisplayFor(modelItem => item.Player.Price)
                </td>
                <td>
                    <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.Id">Remove Player</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-light" asp-page="../FantasyTeam/Index">Back to All Fantasy Teams</a>
