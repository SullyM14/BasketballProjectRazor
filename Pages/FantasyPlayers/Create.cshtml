@page
@model BasketballProjectRazor.Pages.FantasyPlayers.CreateModel

@{
    ViewData["Title"] = "Create";
}
<style>
    * {
        background-size: cover;
        text-align: center;
    }

    .form-group {
        color: white;
    }

    h1 {
        color: white;
    }

    .form-control {
        color: black;
    }

    a {
        color: white;
    }
</style>
<h1>Add Player</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="font-size:larger">
                Budget: £
            </div>
            <div class="form-group">
                <label class="control-label"> User Team ID</label>
                <select asp-for="UserTeamPlayers.UserTeamId" class="form-control" asp-items="ViewBag.UserTeamId"></select>
            </div>
            <div class="form-group">
                <label asp-for="UserTeamPlayers.PlayerId" class="control-label">Player ID</label>
                <select style="color:black" asp-for="UserTeamPlayers.PlayerId" class="form-control" asp-items="ViewBag.PlayerId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-light" asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
