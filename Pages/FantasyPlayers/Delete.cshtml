@page
@model BasketballProjectRazor.Pages.FantasyPlayers.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<style>
    * {
        background-size: cover;
        text-align: center;
        color: white
    }
    a {
        color: white;
    }
  </style>
<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserTeamPlayers.Player)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserTeamPlayers.Player.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserTeamPlayers.UserTeam)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserTeamPlayers.UserTeam.TeamName)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="UserTeamPlayers.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-light" asp-page="./Index">Back to List</a>
    </form>
</div>
