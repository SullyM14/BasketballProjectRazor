@page
@model BasketballProjectRazor.Pages.FantasyTeam.CreateModel

@{
    ViewData["Title"] = "Create";
}
<style type="text/css">

    * {
        background-size: cover;
        text-align: center;
        color: white;
    }

    a {
        color: white;
    }
</style>
<h1 style="text-align:center">Create new Fantasy Team</h1>

<hr />
<div class="row justify-content-center" style="text-align:center">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserTeams.UserId" class="control-label"></label>
                <select asp-for="UserTeams.UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="UserTeams.TeamName" class="control-label"></label>
                <input asp-for="UserTeams.TeamName" class="form-control" />
                <span asp-validation-for="UserTeams.TeamName" class="text-danger"></span>
            </div>
            <div class="form-group" style="text-align:center">
                <input type="submit" value="Create Team" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index" class="btn btn-light">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
